<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".property_module.view.review_fragment.PropertyReviewFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <com.smarteist.autoimageslider.SliderView
                android:id="@+id/add_property_image_slider"
                android:layout_width="match_parent"
                android:layout_height="230dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reviewTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:lines="1"
                android:ellipsize="end"
                android:paddingTop="8dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                style="@style/TextAppearance.AppCompat.Display1"
                android:text="Title"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    app:srcCompat="@drawable/ic_price_black"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reviewPriceTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="1,200,000 Ushs"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp">

            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    app:srcCompat="@drawable/ic_location_black"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/reviewLocationTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="12sp"
                    android:text="Makindye, Kampala"/>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/reviewDescriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@android:color/black"
                android:text="@string/sample_text"/>

    </LinearLayout>
</ScrollView>